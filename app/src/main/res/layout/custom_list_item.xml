<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >



    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/imageViewVegetarian"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:srcCompat="@drawable/ic_vegetarian"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rowClick"
        >



        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/dayOfTheWeek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mo."
                android:textColor="@color/white"
                android:gravity="center"
                android:alpha="0.8"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/gerichtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="@string/gerichtPlaceholderText"
                android:textColor="@color/white"

                />

            <!--
            <TextView
                android:id="@+id/zutaten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textStyle="bold"
                android:text ="@string/zutatenPlaceholderText"
                android:textColor="@color/white"
                android:maxLines="2"

                />
            -->

        </LinearLayout>

        <android.widget.Button
            android:id="@+id/btnHinzufuegenZurEinkaufsliste"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/ic_add_to_shoppinglist"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            />

        <android.widget.Button
            android:id="@+id/btnBearbeiten"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/ic_edit_gericht"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>









</LinearLayout>