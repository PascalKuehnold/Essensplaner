<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >


    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="65dp"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"

        >
        <TextView
            android:id="@+id/gerichtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/gerichtPlaceholderText"
            android:textColor="@color/white"

            />
        <TextView
            android:id="@+id/zutaten"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:text ="@string/zutatenPlaceholderText"
            android:textColor="@color/white"
            />

    </LinearLayout>




    <android.widget.Button
        android:id="@+id/btnHinzufuegenZurEinkaufsliste"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/ic_add_to_shoppinglist"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="10dp"

        />

    <android.widget.Button
        android:id="@+id/btnBearbeiten"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/ic_edit_gericht"
        android:layout_marginTop="10dp"
        />


</LinearLayout>