<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".creatorclasses.GerichteListe"
    style="@style/Theme.Essensplaner.NoActionBar">


    <TextView
        android:id="@+id/gerichteListeHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/deine_gerichte"
        android:textSize="@dimen/headline"
        app:layout_constraintBottom_toTopOf="@+id/gerichteAnzeige"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/white"
        />

    <ListView
        android:id="@+id/gerichteAnzeige"
        android:layout_width="match_parent"
        android:layout_height="580dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/divider4" />

    <View
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toTopOf="@+id/gerichteAnzeige"
        app:layout_constraintTop_toBottomOf="@+id/gerichteListeHeader"
        tools:layout_editor_absoluteX="3dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>