<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ui.gerichtzubereitung.GerichtZubereitungFragment">

    <ImageView
        android:id="@+id/imageView_LockRecipeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_lock_closed_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"

        />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/recipeViewTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toBottomOf="@id/imageView_LockRecipeText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/newBackgroundColor"
            android:orientation="vertical"
            android:scrollbars="vertical"
            android:isScrollContainer="true"
            android:hint="Fenster Ã¶ffnen und Zubereitungstext eingeben"
            android:textColorHint="@color/lightGrey"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editText_meal_recipe"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/newBackgroundColor"
                android:singleLine="false"
                android:enabled="true"
                android:focusableInTouchMode="true"
                android:inputType="textMultiLine"
                android:textColor="@color/white" />

        </com.google.android.material.textfield.TextInputLayout>

