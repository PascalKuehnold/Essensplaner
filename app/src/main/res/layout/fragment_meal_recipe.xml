<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ui.gerichtzubereitung.GerichtZubereitungFragment">

    <ImageView
        android:id="@+id/imageView_LockRecipeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:srcCompat="@drawable/ic_lock_closed_white" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/recipeViewTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginTop="48dp"
        android:layout_marginBottom="@dimen/bottomNavBar"
        android:background="@color/newBackgroundColor"
        android:isScrollContainer="true"
        android:orientation="vertical"
        android:scrollbars="vertical"
        android:textColorHint="@color/lightGrey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_LockRecipeText">

        <com.google.android.material.textfield.TextInputEditText

            android:id="@+id/editText_meal_recipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/newBackgroundColor"
            android:enabled="true"
            android:focusableInTouchMode="true"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:textColor="@color/white" />

    </com.google.android.material.textfield.TextInputLayout>

