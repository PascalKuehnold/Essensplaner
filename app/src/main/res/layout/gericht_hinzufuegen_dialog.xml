<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:layout_gravity="center_horizontal"
    tools:context=".activities.GerichteListeActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/newHeaderColor"
        android:onClick="addMealByUser"
        android:padding="5dp"
        >

        <!--
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_info_light"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"

            android:layout_alignParentRight="true"


            android:contentDescription="@string/description_own_meal" />
           -->
        <TextView
            android:id="@+id/tvOwnMeal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/own_meal"

            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            tools:ignore="RelativeOverlap" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_add_to_shoppinglist"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tvOwnMeal"
            android:contentDescription="@string/mealAdd"
            />



    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/gradient_white_to_blue"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/newHeaderColor"
        android:padding="5dp"
        android:onClick="addMealByChefkoch"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/via_chefkoch"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"

            tools:ignore="RelativeOverlap" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic__1_ck_logo"
            android:contentDescription="@string/chefkoch_logo"

            />


        <!--
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_info_light"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"


            android:contentDescription="@string/description_via_chefkoch_meal" />
            -->

    </RelativeLayout>




</LinearLayout>