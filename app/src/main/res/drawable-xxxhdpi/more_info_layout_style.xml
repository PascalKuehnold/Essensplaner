<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/newHeaderColor"
                />
            <stroke
                android:width="2dp"
                android:color="@color/newHeaderColor"/>
            <corners
                android:bottomLeftRadius="10dp"
                />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
    <item>
        <inset
            android:insetRight="-3dp"
            >


            <shape>
                <gradient
                    android:startColor="@color/newBackgroundColor"
                    android:endColor="@color/newBackgroundColor"
                    android:angle="90" />
                <stroke
                    android:width="2dp"
                    android:color="@color/newHeaderColor" />
                <corners
                    android:bottomLeftRadius="10dp"
                    />
                <padding
                    android:left="5dp"
                    android:top="5dp"
                    android:right="5dp"
                    android:bottom="5dp" />
            </shape>
        </inset>
    </item>
</selector>