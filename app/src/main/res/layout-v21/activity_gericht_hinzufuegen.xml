<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".activities.GerichtHinzufuegenActivity">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:focusable="true">

    <com.google.android.material.textfield.TextInputLayout
        style="@style/EditTextHint"
        android:id="@+id/textInputLayoutGericht"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:hintTextColor="@color/lightGrey"
        app:layout_constraintBottom_toTopOf="@id/btnZutatHinzuf端gen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputTextGericht"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/gericht_name"
            android:gravity="center_horizontal"

            android:backgroundTint="@color/newHeaderColor"
            android:textColorHint="@color/lightGrey"
            android:textColor="@color/white" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnZutatHinzuf端gen"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="40dp"
        android:backgroundTint="@color/newHeaderColor"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/zutat_hinzuf_gen"
        android:textColor="@color/lightGrey"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutGericht" />

    <TextView
        android:id="@+id/tvVegetarisch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vegetarisch"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnZutatHinzuf端gen"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        />


    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchVegetarisch"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintTop_toBottomOf="@+id/btnZutatHinzuf端gen" />

    <TextView
        android:id="@+id/tvMultipleDays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/f_r_mehr_als_einen_tag"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvVegetarisch"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        />


    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchFastPreperation"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintTop_toBottomOf="@+id/tvMultipleDays" />

    <TextView
        android:id="@+id/tvShortDays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/schnelle_zubereitung"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMultipleDays"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        />


    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchMultipleDays"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintTop_toBottomOf="@+id/tvVegetarisch" />


    <Button
        android:id="@+id/btnHinzufuegenGericht"
        android:layout_width="256dp"
        android:layout_height="76dp"
        android:backgroundTint="@color/newHeaderColor"
        android:text="@string/hinzuf_gen"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switchFastPreperation" />



</androidx.constraintlayout.widget.ConstraintLayout>

</merge>