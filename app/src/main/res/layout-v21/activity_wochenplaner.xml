<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Wochenplaner"
    >

    <TextView
        android:id="@+id/textViewWochenplanHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wochenplaner"
        android:textSize="@dimen/headline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/divider5"
        android:textColor="@color/white"
        />

    <ListView
        android:id="@+id/listViewWochenplan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:divider="@drawable/gradient_white_to_blue"
        android:dividerHeight="@dimen/cardview_compat_inset_shadow"
        app:layout_constraintBottom_toTopOf="@+id/btnNeuerPlan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/divider5">

    </ListView>

    <Button
        android:id="@+id/btnNeuerPlan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="@string/neuer_plan"
        android:backgroundTint="@color/newHeaderColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/listViewWochenplan"
        />

    <View
        android:id="@+id/divider5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toTopOf="@+id/listViewWochenplan"
        app:layout_constraintTop_toBottomOf="@+id/textViewWochenplanHead"
        tools:layout_editor_absoluteX="4dp" />
</androidx.constraintlayout.widget.ConstraintLayout>