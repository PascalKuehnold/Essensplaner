<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Essensplaner" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/newHeaderColor</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/newHeaderColor</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/newBackgroundColor</item>

        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>

        <item name="android:textColorHint">@color/lightGrey</item>
        <item name="hintTextColor">@color/lightGrey</item>
    </style>

    <style name="Theme.Essensplaner.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
    </style>


    <style name="Theme.Essensplaner.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/newHeaderColor</item>
        <item name="colorControlNormal">@color/newHeaderColor</item>
        <item name="colorPrimaryDark">@color/newHeaderColor</item>
        <item name="background">@color/newHeaderColor</item>
        <item name="android:colorForegroundInverse">@color/newHeaderColor</item>
    </style>

    <style name="Theme.Essensplaner.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="EditTextHint" parent="TextAppearance.AppCompat">
        <item name="colorAccent">@color/lightGrey</item>
        <item name="android:textColorHint">@color/lightGrey</item>
        <item name="colorControlNormal">@color/newBackgroundColor</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>
</resources>